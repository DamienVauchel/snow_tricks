{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
    <div class="col-md-4">
        <h4>Pas encore inscrit?</h4>
        <em>
            Nous vous invitons à vous inscrire pour partager vos figures avec nous!
        </em>
        <br><br>
        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">Inscription</a>
        <br><hr>
        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié?</a>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-6">
        <h4 class="text-center">Connexion</h4>
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <label class="form-label" for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            <br>
            <label class="form-label" for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" />
            <br>
            <div class="form-check">
                <label class="form-check-label" for="remember_me">
                    <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
            <br>
            <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
</div>
