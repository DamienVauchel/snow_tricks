{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group row">
        {{ form_label(form.title, "Nom du Trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.title) }}
        <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <br>
    <div class="form-group row">
        {{ form_label(form.description, "Description du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.description) }}
        <div class="col-sm-10">
            <small><em>Pour ajouter une ou plusieurs vid√©o(s), appuyez sur le bouton "Source", collez le(s) lien(s) embed, puis rappuyez sur "Source" pour revenir au mode visuel</em></small>
            {{ form_widget(form.description, {'attr': {'class': 'form-control ckeditor'}}) }}
        </div>
    </div>
    <br>
    <div class="form-group row">
        {{ form_label(form.level, "Niveau du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.level) }}
        <div class="col-sm-10">
            {{ form_widget(form.level) }}
        </div>
    </div>
    <br>
    <div class="form-group row">
        {{ form_label(form.category, "Groupe du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.category) }}
        <div class="col-sm-10">
            {{ form_widget(form.category) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.image) }}
        <div class="col-sm-10">
            {% if trick.image is defined %}
                <img class="img-responsive img-thumbnail" style="height: 200px;" src="{{ asset(trick.image.webPath) }}" alt="{{ trick.image.alt }}">
            {% endif %}
            {{ form_widget(form.image) }}
        </div>
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}