{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group row">
        {{ form_label(form.title, "Nom du Trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.title) }}
        <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <br>
    <div class="form-group row">
        {{ form_label(form.description, "Description du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.description) }}
        <div class="col-sm-10">
            <small><em>Pour ajouter une ou plusieurs vid√©o(s), appuyez sur le bouton "Source", collez le(s) lien(s) embed, puis rappuyez sur "Source" pour revenir au mode visuel</em></small>
            {{ form_widget(form.description, {'attr': {'class': 'form-control ckeditor'}}) }}
        </div>
    </div>
    <br>
    <div class="form-group row">
        {{ form_label(form.level, "Niveau du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.level) }}
        <div class="col-sm-10">
            {{ form_widget(form.level) }}
        </div>
    </div>
    <br>
    <div class="form-group row">
        {{ form_label(form.category, "Groupe du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.category) }}
        <div class="col-sm-10">
            {{ form_widget(form.category) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.images, "Images", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_errors(form.images) }}
        {% if trick.images is defined %}
            {% for image in trick.images %}
                <img style="width: 200px;" src="{{ asset(image.webPath) }}" alt="{{ image.alt }}">
            {% endfor %}
        {% endif %}
        {{ form_widget(form.category) }}
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}